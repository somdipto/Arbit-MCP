# Server Configuration
NODE_ENV=development
PORT=3000
API_VERSION=v1

# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=csab_db
DB_USER=csab_user
DB_PASSWORD=your_secure_password
DB_SSL=false

# Redis Configuration
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=
REDIS_DB=0

# JWT Configuration
JWT_SECRET=your_super_secret_jwt_key_here
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Avalanche Network Configuration
AVALANCHE_C_CHAIN_RPC=https://api.avax.network/ext/bc/C/rpc
AVALANCHE_P_CHAIN_RPC=https://api.avax.network/ext/P
AVALANCHE_X_CHAIN_RPC=https://api.avax.network/ext/bc/X

# Subnet RPC Endpoints
SUBNET_FUJI_RPC=https://api.avax-test.network/ext/bc/C/rpc
SUBNET_LOCAL_RPC=http://localhost:9650/ext/bc/C/rpc

# DEX API Endpoints
TRADERJOE_API=https://barn.traderjoexyz.com/v1
PANGOLIN_API=https://api.pangolin.exchange
SUSHI_API=https://api.sushi.com

# MCP Configuration
MCP_API_ENDPOINT=https://api.modelcontextprotocol.com
MCP_API_KEY=your_mcp_api_key_here
MCP_MODEL_ID=arbitrage-detector-v1

# Trading Configuration
MIN_PROFIT_THRESHOLD=0.5
MAX_TRADE_SIZE_USD=10000
MIN_TRADE_SIZE_USD=100
GAS_LIMIT_MULTIPLIER=1.2
SLIPPAGE_TOLERANCE=0.5

# Monitoring Configuration
PRICE_UPDATE_INTERVAL=1000
OPPORTUNITY_CHECK_INTERVAL=1000
HEALTH_CHECK_INTERVAL=30000

# Logging Configuration
LOG_LEVEL=info
LOG_FILE_PATH=./logs/csab.log

# Security Configuration
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
CORS_ORIGIN=http://localhost:3000

# Email Configuration (for alerts)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USER=your_email@gmail.com
SMTP_PASS=your_app_password

# WebSocket Configuration
WS_PORT=3001
WS_PATH=/ws

# Analytics Configuration
ANALYTICS_ENABLED=true
ANALYTICS_RETENTION_DAYS=90

# Backup Configuration
BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=24
BACKUP_RETENTION_DAYS=30
